#!/bin/bash

if [[ $(id -u) -ne "0" ]]; then
	echo "$0 must be run as root." >&2
	exit 1
fi

PIDS=$(pidof @LIBEXEC_PREFIX@/bees)

BEESSTATUS=$(for PID in ${PIDS}; do
	gawk -e'BEGIN { RS="\0"; FS="=" } /^BEESSTATUS=/ { print $2 }' /proc/${PID:?No running bees instance found}/environ
done)

watch -n1 -pt cat ${BEESSTATUS:?No running bees instance found}
